doctype
html
    head
        meta(name="viewport" content="width=device-width, initial-scale=1")
        <link rel="icon" type="image/png" href="/static/images/favicon.png" />
        title Fennec Freelance
        link(rel="stylesheet" href="/static/semantic/dist/semantic.min.css")
        link(rel="stylesheet" href="/static/css/main.css")
        script(src="/static/js/jquery-3.2.1.min.js")
        script(src="/static/semantic/dist/semantic.min.js")
        script(src="/static/js/main.js")
        script(src="/static/js/ajax.js")
        script(src="/static/js/jquery.tablesorter.min.js")
    body
        .ui.left.inverted.vertical.menu.sidebar
            .ui.basic.segment
                block user
                if (user.isValid === true)
                    .ui.green.segment
                        h5.ui.header
                            i.checkmark.circle.icon
                            .content
                                .header Profil validé
                else
                    .ui.red.segment
                        h5.ui.header
                            i.remove.circle.icon
                            .content Profil non validé
                .ui.two.column.grid
                    .column
                        .ui.teal.icon.fluid.button
                            i.mail.icon
                    .column   
                        .ui.teal.icon.fluid.button
                            i.alarm.icon
                .ui.divider     
                .ui.large.vertical.secondary.fluid.pointing.inverted.menu
                    a(class= ( currentRoute === 'profil' ? "active item" : "item" ) href="/freelancer/") 
                        i.user.icon
                        | Profil
                    a(class= ( currentRoute === 'offres' ? "active item" : "item" ) href="/freelancer/offres") 
                        i.tasks.icon
                        | Offres
                    a(class= ( currentRoute === 'postulats' ? "active item" : "item" ) href="/freelancer/postulats") 
                        i.wait.icon
                        | Postulats
                    a(class= ( currentRoute === 'contrats' ? "active item" : "item" ) href="/freelancer/contrats") 
                        i.suitcase.icon
                        | Contrats
                    a(class= ( currentRoute === 'employeurs' ? "active item" : "item" ) href="/freelancer/employeurs") 
                        i.sitemap.icon
                        | Employeurs
                .ui.divider
                .ui.large.vertical.secondary.fluid.pointing.inverted.menu
                    a.item
                        i.home.icon
                        | Accueil
                    a.item 
                        i.info.icon
                        | Informations
                    a.item
                        i.help.circle.icon
                        | Support
                    a.item(href="/logout") 
                        i.power.icon
                        | Déconnexion                 
        .pusher
            block content